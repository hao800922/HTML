<%- include('parts/html-head') %>
<%- include('parts/navbar') %>

<article>
  <div class="container" style="height: 800px ; word-wrap:break-word; margin: 10px auto 10px auto;">
    <div class="card" style="width: 80% ; margin: 5% auto 5% auto;">
      <div class="card-body">
        <h1>
          <a href="/restaurant/add"><i class="far fa-plus-square"></i></a>
        </h1>
      </div>
    </div>
    <% for(let i of rows) { %>
    <div class="card" style="width: 80% ; margin: 1% auto 9% auto;">
      <div class="card-body">
        <h1><%= i.restaurant_title %>
          <a href="/restaurant/edit/<%= i.restaurant_NO %>"><i class="fas fa-edit"></i></a>
          <a href="/restaurant/del/<%= i.restaurant_NO %>"><i class="fas fa-trash-alt"></i></a>
        </h1>
        <figure style="float: left; margin-right: 3%;">
          <img src=/img/<%= i.restaurant_NO %>.jpg alt="" style="width: 100%; height: 100%;">
        </figure>
        <p><%= i.restaurant_content %></p>
      </div>
    </div>
    <% } %>
  </div>
</article>



<%- include('parts/scripts') %>
<%- include('parts/html-foot') %>
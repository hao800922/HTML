<%- include('parts/html-head') %>
<%- include('parts/navbar') %>

<article>
    <div class="container" style="height: 800px ; word-break: break-all; margin: 10px auto 10px auto;">
        <div class="card" style="width: 100% ; margin: 10% auto;">
            <div id="reserve" style="margin: 3%;">
                <h3>審核註冊者</h3>
                <table class="table table-striped" >
                    <thead>
                        <tr>
                            <th scope="col">編號</th>
                            <th scope="col">email</th>
                            <th scope="col">姓名</th>
                            <th scope="col">生日</th>
                            <th scope="col">電話</th>
                            <th scope="col">註冊日期</th>
                            <th><i class="far fa-plus-square"></i></th>
                            <th><i class="far fa-trash-alt"></i></th>
                        </tr>
                    </thead>
                    <tbody>

                        <% for(let i of rows1){ %>

                        <tr>
                            <td><%= i.rid%></td>
                            <td><%= i.email %></td>
                            <td><%= i.name %></td>
                            <td><%= i.birthday %></td>
                            <td><%= i.phone %></td>
                            <td><%= i.createtime %></td>
                            <td><a href="/admin/account/add_rid/<%= i.rid%>"><i class="far fa-plus-square"></i></a></td>
                            <td><a href="/admin/account/del_rid/<%= i.rid%>"><i class="far fa-trash-alt"></i></a></td>
                        </tr>

                        <% } %>

                    </tbody>
                </table>
            </div>
            <div id="reserve" style="margin: 3%;">

                        </tr>
                    </thead>
                    <tbody>

                        <% for(let i of rows2){ %>

                        <tr>
                            <td><%= i.sid%></td>
                            <td><%= i.email %></td>
                            <td><%= i.name %></td>
                            <td><%= i.birthday %></td>
